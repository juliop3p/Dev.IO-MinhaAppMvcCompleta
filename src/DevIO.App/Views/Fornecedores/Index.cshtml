@using DevIO.App.Extensions
@model IEnumerable<DevIO.App.ViewModels.FornecedorViewModel>

@{
    ViewData["Title"] = "Lista de Fornecedores";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-info text-light" asp-action="Create">Novo Fornecedor</a>
</p>
<table class="table table-hover">
    <thead class="bg-dark text-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @this.FormataDocumento(item.TipoFornecedor, item.Documento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td class="d-flex justify-content-end">
                <a class="btn btn-info mx-1" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-search text-light"></span></a> 
                <a class="btn btn-warning mx-1" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-pencil text-light"></span></a> 
                <a class="btn btn-danger mx-1" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash text-light"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
